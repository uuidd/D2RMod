      "defaultValue": "dis_def",
      "options": [
        {
          "value": "dis_def",
          "label": "官方默认掉落",
          "description": "游戏默认"
        },
        {
          "value": "dis_gem1",
          "label": "高难度的怪也能掉落完美宝石"
        },
        {
          "value": "dis_gem2",
          "label": "不会掉落任何宝石,地面更干净",
          "description": "也会增加符文的掉率"
        }
      ]
    },
    {
      "id": "disdrop_potion",
      "type": "select",
      "name": "禁止怪物掉落药剂",
      "description": "药剂指的是小紫,红,蓝,精力,解毒,融冰6种(还是有极少数暗金怪会掉,不过影响不大)",
      "defaultValue": "dis_def",
      "options": [
        {
          "value": "dis_def",
          "label": "官方默认不屏蔽",
          "description": "游戏默认"
        },
        {
          "value": "dis_potion1",
          "label": "禁止掉落精力,解毒,融冰"
        },
        {
          "value": "dis_potion2",
          "label": "禁止掉落红,蓝,精力,解毒,融冰"
        },
        {
          "value": "dis_potion3",
          "label": "禁止掉落小紫,红,蓝,精力,解毒,融冰",
          "description": "开荒慎用"
        }
      ]
    },
    {
      "id": "disdrop_junk",
      "type": "select",
      "name": "禁止怪物掉落杂物",
