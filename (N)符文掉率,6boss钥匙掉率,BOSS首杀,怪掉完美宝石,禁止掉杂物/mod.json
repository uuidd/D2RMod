      "options": [
        {
          "value": "dis_def",
          "label": "官方默认不屏蔽",
          "description": "游戏默认"
        },
        {
          "value": "dis_junk1",
          "label": "禁止掉落宝箱钥匙,卷轴,爆炸,毒气"
        },
        {
          "value": "dis_junk2",
          "label": "禁止掉宝箱钥匙,卷轴,爆炸,毒气,箭袋",
          "description": "弓马慎用"
        }
      ]
    }
